@model LittleJohnsHut.Web.Models.WebOrder

<h4>WebOrder</h4>
<hr />

<p style="color:red">@ViewBag.Error</p>
@ViewBag.id
<div class="row">
    <div class="col-md-4" style="background-color:white; border-radius:25px">
        <form asp-action="Order" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


           
            <div class="form-group">
                <label style="color:black" class="control-label">Pizza Peperoni:</label> 
                <br />
                <input style="color:black" type="number" name="PizzaPep" />
                
            </div>
            <div class="form-group">
                <label style="color:black" class="control-label">Pizza Meat Lover: </label>
                <br />
                <input style="color:black" type="number" name="PizzaMeatLover" />
            </div>
            <div class="form-group">
                <label style="color:black" class="control-label">Pizza Veggie: </label>
                <br />
                <input style="color:black" type="number" name="PizzaVeggie" />
            </div>
            <div class="form-group">
                <label style="color:black" class="control-label">Pizza Suprema:</label>
                <br />
                <input style="color:black" type="number" name="PizzaSuprema" />
            </div>

            <div class="form-group" style="display: none">
                <label asp-for="locationId" class="control-label"></label>
                <input asp-for="locationId" class="form-control" />
                <span asp-validation-for="locationId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Order" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@ViewBag.IDK
<div>
    <a asp-action="Index">Back to List</a>
</div>

