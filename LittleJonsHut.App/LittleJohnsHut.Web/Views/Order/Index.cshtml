@model IEnumerable<LittleJohnsHut.Web.Models.WebOrder>
<p>
    <!-- <a asp-action="Create" >Create New</a> -->
    <form asp-action="Index" method="get">
        <input type="text" name="btnPress" />
        <button class="btn btn-default" type="submit">Sort </button>
    </form>
</p>


<p>@ViewBag.Debug  </p>
<table class="table" style="background-color: white;  border-radius:25px">
    <thead>
        <tr>

            <th>
                <p style="color:black">  @Html.DisplayNameFor(model => model.Id) </p>
            </th>
            <th>
                <p style="color:black"> @Html.DisplayNameFor(model => model.OrderDate) </p>
            </th>
            <th>
                <p style="color:black">  @Html.DisplayNameFor(model => model.PizzaCount) </p>
            </th>
            <th>
                <p style="color:black"> @Html.DisplayNameFor(model => model.Price) </p>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p style="color:black">   @Html.DisplayFor(modelItem => item.Id) </p>
                </td>
                <td>
                    <p style="color:black">  @Html.DisplayFor(modelItem => item.OrderDate) </p>
                </td>
                <td>
                    <p style="color:black">  @Html.DisplayFor(modelItem => item.PizzaCount) </p>
                </td>
                <td>
                    <p style="color:black">   @Html.DisplayFor(modelItem => item.Price) </p>
                </td>


            </tr>
        }
    </tbody>
</table>
